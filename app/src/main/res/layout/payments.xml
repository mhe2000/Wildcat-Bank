<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payments"
        android:id="@+id/wildcatBankView"
        android:textSize="25dp"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:background="#2b1ec2"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/payFromLabel"
        android:text="Pay From"
        android:layout_marginTop="45dp"
        android:textSize="23dp"
        android:layout_below="@+id/wildcatBankView"
        android:layout_toStartOf="@+id/paymentAmount" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toLabel"
        android:layout_marginTop="43dp"
        android:text="Pay To"
        android:textSize="23dp"
        android:layout_below="@+id/payFromLabel"
        android:layout_alignStart="@+id/payFromLabel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/paymentAmount"
        android:layout_below="@+id/toLabel"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="56dp"
        android:textSize="23dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/amountLabel"
        android:text="Amount"
        android:textSize="23dp"
        android:layout_alignTop="@+id/paymentAmount"
        android:layout_alignStart="@+id/toLabel" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Review Payment"
        android:id="@+id/reviewPaymentButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        android:textColor="#ffffffff"
        android:background="@drawable/fancy_button"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:src="@drawable/arrow_down"
        android:layout_alignTop="@+id/editText"
        android:layout_alignStart="@+id/button3" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button3"
        android:src="@drawable/arrow_down"
        android:layout_marginStart="41dp"
        android:layout_alignTop="@+id/editText2"
        android:layout_toEndOf="@+id/reviewPaymentButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="Checking"
        android:textSize="23dp"
        android:layout_marginEnd="43dp"
        android:layout_alignTop="@+id/payFromLabel"
        android:layout_toStartOf="@+id/button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:text="Cable"
        android:textSize="23dp"
        android:layout_above="@+id/paymentAmount"
        android:layout_alignStart="@+id/editText" />
</RelativeLayout>